{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc build",
            "type": "shell",
            "command": "gcc",
            "options": {
                "cwd": "${fileDirname}"
            },
            "args": [
                "-g",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "g++ build",
            "type": "shell",
            "command": "g++",
            "options": {
                "cwd": "${fileDirname}"
            },
            "args": [
                "-g",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "exe execute",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "iverilog_output",
            "type": "shell",
            "command": "iverilog",
            "options": {
                "cwd": "${fileDirname}"
            },
            "args": [
                "-o",
                "${fileBasenameNoExtension}.vvp",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "iverilog_VVP",
            "type": "shell",
            "command":"vvp",
            "options": {
                "cwd": "${fileDirname}"
            },
            "args":[
                "${fileBasenameNoExtension}.vvp"
            ],
            "group": "test",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "iverilog_GTK",
            "type": "shell",
            "command":"gtkwave",
            "options": {
                "cwd": "${fileDirname}"
            },
            "args":[
                "test_output.vcd"
            ],
            "group": "test",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        }
    ]
}